		<action name="v_strafe_right">
			<rebind device="joystick" input="" />
		</action>
		<action name="v_decoupled_strafe_right">
			<rebind device="joystick" input="" />
		</action>

		<!-- brake bound within TARGET config on rocker switch -->
		<action name="v_neutonian_brake">
			<rebind device="joystick" input="" />
		</action>
		<action name="v_brake">
			<rebind device="joystick" input="" />
		</action>
